---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Starke Community",
    description:
      "Wir verbinden Menschen durch Padel und schaffen einen offenen, lebendigen Verein für alle Spielstärken und Altersgruppen.",
    icon: "bx:group",
  },
  {
    title: "Sportliche Entwicklung",
    description:
      "Vom Einstieg bis zum Wettkampfsport fördern wir Spieler:innen gezielt und nachhaltig.",
    icon: "bx:award",
  },
  {
    title: "Nachwuchsförderung",
    description:
      "Kinder und Jugendliche sind die Zukunft des Padelsports – wir bieten ihnen professionelle und altersgerechte Trainingsstrukturen.",
    icon: "bx:bxs-data",
  },
  {
    title: "Zukunftsstandort",
    description:
      "Wir arbeiten aktiv daran, eine eigene Padel-Anlage im Raum Freiburg zu realisieren und optimale Bedingungen für den Sport zu schaffen.",
    icon: "bx:been-here",
  },
  {
    title: "Wachstum & Sichtbarkeit",
    description:
      "Wir machen Padel im Raum Freiburg sichtbar und etablieren den Sport langfristig in der Region.",
    icon: "bx:rocket",
  },
  {
    title: "Partnerschaften",
    description:
      "Durch starke Kooperationen mit Vereinen, Schulen und Unternehmen treiben wir die Entwicklung des Padelsports gemeinsam voran.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight" id="vision">
    Unsere Vision als Padel Club Freiburg
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Gemeinsam gestalten wir die Zukunft des Padelsports im Raum Freiburg – mit Leidenschaft, Gemeinschaft und klaren Zielen.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
